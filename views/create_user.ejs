<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Create User</h1>
<form method="post" action="/users/create">
    <label>
        Name:
        <input type="text" name="name" required/>
    </label>
    <label>
        Username:
        <input type="text" name="username" pattern="^\S+$" placeholder="UserName" title="Do not enter whitespaces" required/>
    </label>
    <label>
        Email:
        <input type="email" name="email"  pattern = "(?!test@test.com$)[\w.%+-]{3,}@[a-z]{3,}\.[a-z]{2,}(?:\.[a-z]{2,})?" placeholder="email" title="The format is name@domain.com" required/>
    </label>
    <label>
        ProfileImageUrl:
        <input type="url" placeholder="https://" name="profileImageUrl" required/>
    </label>
    <label>
        CoverImageUrl:
        <input type="url" placeholder="https://" name="coverImageUrl"  required/>
    </label>
    <button type="submit">Submit</button>
</form>
</body>
<%- include('_footer') -%>
</html>