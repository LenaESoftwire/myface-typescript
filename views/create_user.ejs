<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Create User</h1>
<form method="post" action="/users/create">
    <label>
        Name:
        <input type="text" name="name" required alt="Please enter your name"/>
    </label>
    <label>
        Username:
        <input type="text" name="username" pattern="^\S+$" placeholder="UserName" title="Do not enter whitespaces" alt="Please enter your username" required/>
    </label>
    <label>
        Email:
        <input type="email" name="email" alt="Please enter your your email address" required/>
    </label>
    <label>
        ProfileImageUrl:
        <input type="url" placeholder="https://" name="profileImageUrl" alt="Please enter a url link to a valid profile image" required/>
    </label>
    <label>
                
        CoverImageUrl:
        <input type="url" placeholder="https://" name="coverImageUrl" alt="Please enter your a url link to a valid cover image"  required/>
    </label>
    <button type="submit">Submit</button>
</form>
</body>
<%- include('_footer') -%>
</html>