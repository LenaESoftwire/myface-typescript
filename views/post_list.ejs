<html lang="en-gb">
<%- include('_head') -%>
    <%- include('_header') -%>

        <body>
            <div>
                <ol id="body">
                    <h1>Posts</h1>
                    <button style="z-index: 4" id="hideButton">Menu</button>
                    <% results.forEach(function(post) {%>
                        <li class="posts">
                            <article>
                                <div class="text">
                                    <p class="message">
                                        <%= post.message %>
                                    </p>
                                </div>
                                <!-- <div class="picture"> -->
                                <!-- <img src="<%= post.imageUrl %>" /> -->
                                <!-- </div> -->

                            </article>
                            <p class="infoText">By <%= post.postedBy.name %> at <time class="infoText">
                                        <%= post.createdAt %>
                                    </time>
                            </p>
                            <form class="likeForm" method="post" action="/posts/<%= post.id %>/like/">
                                <button class="likes" type="submit">Like</button>
                            </form>

                            <form class="likeForm" method="post" action="/posts/<%= post.id %>/dislike/">
                                <button class="likes" type="submit">Disike</button>
                            </form>

                        </li>

                        <% }); %>
                </ol>
                <button id="colourButton">Change Colour</button>
            </div>
        </body>
        <nav>
            <%if (previous) { %>
                <a href="<%= previous %>">Previous</a>
                <% } %>
                    <%if (next) { %>
                        <a href="<%= next %>">Next</a>
                        <% } %>
        </nav>
        <%- include('_footer') -%>

</html>